<script>
  import { getRole } from '~/utils/setRole';

  if (typeof window !== 'undefined') {
    const userRole = getRole();

    if (userRole !== 'root') {
      alert('您无权限查看此页面');
      window.location.href = '/'; // 跳转到主页或其他页面
    }
  }
</script>
